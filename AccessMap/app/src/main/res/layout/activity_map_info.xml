<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black_color">
        <SeekBar
            android:id="@+id/setting_seekbar_radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
           />
        <TextView
            android:id="@+id/setting_textview_radius_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="3 km"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin">
            <RadioButton
                android:id="@+id/setting_radioButton_vi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/app_language_title_vi"/>
            <RadioButton
                android:id="@+id/setting_radioButton_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/app_language_title_en"/>

        </RadioGroup>
        <Button
            android:id="@+id/setting_button_place_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_info_button_height"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="@string/label_location_category"
            android:onClick="onClick_placeType"
            />
        <Button

            android:id="@+id/setting_button_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_info_button_height"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="@string/label_update_button"
            android:onClick="onClick_updateButton"/>
        <Button
            android:id="@+id/setting_button_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_info_button_height"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="@string/button_setting_info_title"
            android:onClick="onClick_infoButton"/>
        <Button
            android:id="@+id/setting_button_help"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_info_button_height"
            android:text="@string/button_setting_help_title"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:onClick="onClick_helpButton"/>
    </LinearLayout>
</LinearLayout>