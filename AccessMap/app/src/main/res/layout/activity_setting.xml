<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pham.accessmap.SettingActivity">

    <TextView
        android:id="@+id/tv_radius"
        android:text="@string/label_radius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_language"
        android:text="@string/label_language"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/tv_radius"/>
    <Switch
        android:id="@+id/languageSwitch"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_radius"
        android:layout_toRightOf="@+id/label_language"/>
    <SeekBar
        android:id="@+id/radius_range"
        android:layout_toRightOf="@+id/tv_radius"
        android:layout_width="200dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:max = "4"
        android:progress="2"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_km"
        android:text="4km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="1dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/radius_range"/>
    <TextView
        android:id="@+id/tv_On"
        android:text="On"
        android:layout_toLeftOf="@+id/switch_all"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/tv_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Switch
        android:id="@+id/switch_all"
        android:layout_below="@+id/tv_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"/>

    <ListView
        android:id="@+id/list_LocationType"
        android:layout_below="@+id/switch_all"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        </ListView>
</RelativeLayout>
