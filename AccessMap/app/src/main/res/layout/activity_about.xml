<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    tools:context="com.pham.accessmap.About">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/about_drd_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/about_drd_logo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/drd_logo"
                    />
                <TextView
                    android:id="@+id/about_drd_content"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/iOS"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="Test"/>
            </LinearLayout>

            <TextView
                android:id="@+id/about_drd_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Content"
                android:textSize="17sp"
                android:layout_below="@+id/about_drd_title"/>

            <LinearLayout
                android:id="@+id/about_hoasen_title"
                android:layout_below="@+id/about_drd_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/about_hsu_logo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/hoasen"
                    />
                <TextView
                    android:id="@+id/about_hsu_content"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/iOS"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="Test 1111"/>
            </LinearLayout>


            <TextView
                android:id="@+id/about_hsu_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Content"
                android:textSize="17sp"
                android:layout_below="@+id/about_hoasen_title"/>

        </RelativeLayout>
    </ScrollView>

</LinearLayout>
