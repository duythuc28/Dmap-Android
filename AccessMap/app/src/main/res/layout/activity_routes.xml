<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pham.accessmap.RoutesActivity">

    <ImageButton
        android:id="@+id/switchRoute"
        android:layout_marginTop="20dp"
        android:background="@drawable/search_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="onClick_switch"/>
   <EditText
       android:id="@+id/fromRoute"
       android:imeOptions="actionNext"
       android:singleLine="true"
       android:layout_marginTop="5dp"
       android:layout_marginLeft="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/switchRoute"/>
    <EditText
        android:id="@+id/toRoute"
        android:layout_below="@+id/fromRoute"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:layout_marginLeft="60dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/list_route"
        android:layout_below="@+id/toRoute"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</RelativeLayout>
